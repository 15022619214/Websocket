.taskBottom {
  width: 100%;
  height: 80rpx;
  position: fixed;
  z-index: 1;
  bottom: 0;
  background-color: #222;
}

.taskInput {
  border: 2rpx solid #eee;
  float: left;
  border-radius: 10rpx;
  height: 55rpx;
  margin-top: 10rpx;
  width: 80%;
  margin-right: 10rpx;
  margin-left: 10rpx;
  background-color: #fff;
  font-size: 24rpx;
}

.taskBtn {
  float: left;
  margin-top: 10rpx;
}

.taskWindow{
  width: 100%;
  padding: 10rpx;
}

.msg_mask{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 100%;
  margin-bottom: 10rpx;
}

.msg_img{
  width: 15%;
}

.msg_img image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.msg_content{
  width: 75%;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  padding: 10rpx;
  font-size: 24rpx;
}